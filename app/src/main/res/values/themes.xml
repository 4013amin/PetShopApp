<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- تم اسپلش -->
    <style name="Theme.MySplashScreen" parent="Theme.SplashScreen">
        <!-- رنگ پس‌زمینه اسپلش -->
        <item name="windowSplashScreenBackground">#03A9F4</item>
        <!-- آیکون انیمیشن اسپلش -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/baseline_pets_24</item>
        <!-- تمی که بعد از اسپلش نمایش داده می‌شود -->
        <item name="postSplashScreenTheme">@style/Theme.Shop_App_project</item>
        <!-- رنگ استاتوس بار در اسپلش -->
        <item name="android:statusBarColor">#03A9F4</item>
        <!-- غیرفعال کردن حالت تاریک -->
        <item name="android:forceDarkAllowed" tools:targetApi="29">false</item>
    </style>

    <!-- تم اصلی اپلیکیشن -->
    <style name="Theme.Shop_App_project" parent="android:Theme.Material.Light.NoActionBar">
        <!-- غیرفعال کردن حالت تیره -->
        <item name="android:forceDarkAllowed" tools:targetApi="29">false</item>
        <!-- رنگ‌های اصلی اپلیکیشن -->
        <item name="colorPrimary">#03A9F4</item>
        <item name="colorPrimaryDark">#0288D1</item>
        <item name="colorAccent">#FF5722</item>
        <item name="android:statusBarColor">#03A9F4</item>
        <item name="android:colorBackground">#FFFFFF</item>
        <item name="android:textColor">#000000</item>
    </style>

</resources>
